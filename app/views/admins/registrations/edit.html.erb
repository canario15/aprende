<hr/>
<h2>Informacion del <span>administrador</span></h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :patch, :class => "contact-form"}) do |f| %>
  <div class="row-fluid offset4">
    <div class="span4">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Pendiente de confirmacion: <%= resource.unconfirmed_email %></div>
      <% end %>
      <%= f.password_field :current_password, :autocomplete => "off", placeholder: "Contraseña Actual" %>
      <%= f.password_field :password, :autocomplete => "off", placeholder: "Contraseña Nueva" %>
      <%= f.password_field :password_confirmation, :autocomplete => "off", placeholder: "Confirmar Contraseña Nueva" %>
    </div>
  </div>
  <div class="row-fluid margin">
    <div style="text-align:center">
      <%= link_to 'Atras', edit_admin_path(resource),class:"btn btn-large" %>
      <button type="submit" class="btn btn-large">Confirmar</button>
    </div>
  </div>
<% end %>
