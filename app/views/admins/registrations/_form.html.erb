<h2>Informacion del <span>administrador</span></h2>
<%= form_for(:admin, :url => registration_path(:admin), :html => { class: 'contact-form' } ) do |f| %>
  <div class="row-fluid offset4">
    <div class="span4">
      <%= f.email_field :email, autofocus: true, placeholder: "Mail" %>
      <%= f.fields_for :company_attributes do |ff| %>
        <%= ff.text_field :name,  placeholder: "Nombre Empresa" %>
      <% end %>
      <%= f.password_field :password, placeholder: "Contraseña" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña" %>
    </div>
  </div>
  <div class="row-fluid horizontal-margin">
    <div style="text-align:center">
      <button type="submit" class="btn btn-large">Confirmar</button>
    </div>
  </div>
<% end %>
