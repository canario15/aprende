<%= form_for @course, :html => {:class => "contact-form"} do |f| %>
  <div class="row-fluid offset2">
    <div class="span4">
      <%= f.text_field :title, :autofocus => true, class: 'form-control', placeholder: 'Titulo' %>
      <%= f.file_field :image %>
    </div>
    <div class="span4">
      <output id="avatar_preview" >
        <span>
          <% if @course.image.present? -%>
            <%= image_tag @course.image.url(:small) %>
          <% else -%>
            <%= image_tag 'default_user.png', class: "default" %>
          <% end -%>
        </span>
      </output>
    </div>
  </div>
  <div class="row-fluid margin">
    <div style="text-align:center">
      <%= link_to 'Cancelar', courses_path, class: "btn btn-small" %>
      <%= f.button "Guardar", class: 'btn btn-small submit-buttons' %>
    </div>
  </div>
<% end %>