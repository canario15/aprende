<div class="page-header">
  <h1 id="tables">Listado de Capacitaciones</h1>
</div>
<p>
  <%= link_to new_course_path, class: 'btn-add-small' do %>
    <span class='icon-plus-sign'> Nueva Capacitaci√≥n</span>
  <% end -%>
</p>
<% unless @courses.empty? -%>
<table class="table table-striped table-bordered table-hover ">
  <thead>
    <tr>
      <th>Titulo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| -%>
    <tr>
      <td><%= course.title %></td>
      <td><%= link_to 'Editar', edit_course_path(course.id) %></td>
    </tr>
    <% end -%>
  </tbody>
</table>
<% else -%>
<p>No existen capacitaciones.</p>
<% end -%>