<div class="row-fluid offset2">
  <%= hidden_field_tag 'finish', 'false'%>
  <div class="span4">
    <%= f.text_area :description, :autofocus => true, placeholder: "Pregunta" %>
    <%= f.select :dificulty, options_for_select(Question::DIFICULTY,:selected => "#{@question.dificulty}"),{prompt: "Dificultad"},class: "placeholder" %>
    <%= f.text_field :answer, placeholder: "Respuesta Correcta" %>
    <%= image_tag @question.image.url(:small) if @question.id %>
    <%= f.file_field :image %>
  </div>
  <div class="span4">
    <% if(type_multiple_choice?(@trivia.type)) -%>
        <%= f.text_field :incorrect_answer_one, placeholder: 'Respuesta Incorrecta 1' %>
        <%= f.text_field :incorrect_answer_two, placeholder: 'Respuesta Incorrecta 2' %>
        <%= f.text_field :incorrect_answer_three, placeholder: 'Respuesta Incorrecta 3' %>
        <%= f.text_field :incorrect_answer_four, placeholder: 'Respuesta Incorrecta 4' %>
    <% end -%>
  </div>
</div>
<div class="row-fluid margin">
  <div style="text-align:center">
    <button type="submit" class="btn btn-large">Guardar</button>
    <button type="submit" id="save_and_finish" class="btn btn-large">Finalizar y Guardar</button>
    <p><%= link_to 'Cancelar', trivium_path %></p>
  </div>
</div>
