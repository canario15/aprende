<%unless content.nil? -%>
   <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Ver Contenido
  </button>

  <div class="modal fade" id="myModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= content.containable_type %></h4>
        </div>
        <div class="modal-body ">
          <% case content.containable_type
            when "Pdf" %>
            <iframe class="iframe" width="100%" height="400px" src=<%= content.containable.document %>></iframe>
          <% when "Written" %>
             <%=text_area_tag nil,content.containable.document,id: "demo-toolbar-standard",class: "ckeditor_read_only" %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end -%>
