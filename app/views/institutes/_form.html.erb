<% if @institute.errors.any? -%>
  <div class="row">
    <div class="col-lg-offset-2">
      <div class="alert alert-dismissable alert-danger">
        <h4>Se encontro <%= pluralize(@institute.errors.count, "error") %> no es posible crear el Instituto</h4>
        <% @institute.errors.full_messages.each do |msg| %>
          <%= content_tag :label, msg %>
        <% end -%>
      </div>
    </div>
  </div>
<% end -%>
<%= form_for @institute, :html => {:class => "bs-example form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group">
      <label for="name" class="col-lg-2 control-label">Nombre</label>
      <div class="col-lg-10">
        <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: 'Nuevo Instituto' %>
      </div>
    </div>
    <div class="form-group">
      <label for="contact" class="col-lg-2 control-label">Contacto</label>
      <div class="col-lg-10">
        <%= f.text_field :contact, :autofocus => true, class: 'form-control', placeholder: 'contacto' %>
      </div>
    </div>

    <div class="form-group">
      <label for="telephone" class="col-lg-2 control-label">Tel√©fono</label>
      <div id="telephone" class="col-lg-10">
         <%= f.text_field :phone, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <%= f.text_field :email, :autofocus => true, class: 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Departamento</label>
      <div class="col-lg-10">
        <% if @institute.state -%>
          <%= select_tag "institute_state", options_from_collection_for_select(@states, "id", "name", @institute.state.id), :class=> "form-control" %>
        <% else -%>
          <%= select_tag "institute_state", options_from_collection_for_select(@states, "id", "name"), :class=> "form-control" %>
        <% end -%>
      </div>
    </div>

    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Ciudad</label>
      <div id="institute_cities" class="col-lg-10">
        <%= f.collection_select(:city_id, @cities, :id, :name, {}, {:class=> "form-control"}) %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to 'Cancelar', institutes_path %>
        <%= f.submit "Crear", class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end -%>
