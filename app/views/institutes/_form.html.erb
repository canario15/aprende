<%= form_for @institute, :html => {:class => "bs-example form-horizontal"} do |f| %>
 <% if @institute.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @institute.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="form-group">
      <label for="title" class="col-lg-2 control-label">Nombre</label>
      <div class="col-lg-10">
        <%= f.text_field :name, autofocus: true, class: 'form-control',  placeholder: "Nombre" %>
      </div>
    </div>
    <div class="form-group">
      <label for="title" class="col-lg-2 control-label">Contacto</label>
      <div class="col-lg-10">
        <%=f.text_field :contact, class: 'form-control', placeholder: "Contacto" %>
      </div>
    </div>
    <div class="form-group">
      <label for="title" class="col-lg-2 control-label">Teléfono</label>
      <div class="col-lg-10">
        <%= f.text_field :phone, class: 'form-control', placeholder: "Teléfono" %>
      </div>
    </div>
    <div class="form-group">
      <label for="title" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to 'Cancelar', institutes_path %>
        <%= f.submit "Guardar", class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end -%>
