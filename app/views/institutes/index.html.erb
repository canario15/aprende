<div class="page-header">
  <h1 id="tables">Listado de áreas</h1>
</div>
<%= link_to 'Nueva Área', new_institute_path %>
<% unless @institutes.empty? -%>
  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Contacto</th>
        <th>Email</th>
        <th>Teléfono</th>
      </tr>
    </thead>
    <tbody>
      <% @institutes.each do |institute| -%>
        <tr>
          <td><%= institute.name %></td>
          <td><%= institute.contact %></td>
          <td><%= institute.email %></td>
          <td><%= institute.phone %></td>
          <td><%= link_to 'Editar', edit_institute_path(institute.id) %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <p>No hay áreas</p>
<% end -%>