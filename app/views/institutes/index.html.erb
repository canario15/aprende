<div class="page-header">
  <h1 id="tables">Listado de áreas</h1>
</div>
<p>
  <%= link_to new_institute_path, class: 'btn-add-small' do %>
    <span class='icon-plus-sign'> Nueva Área </span>
  <% end -%>
</p>
<% unless @institutes.empty? -%>
  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Contacto</th>
        <th>Email</th>
        <th>Teléfono</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @institutes.each do |institute| -%>
        <tr>
          <td><%= institute.name %></td>
          <td><%= institute.contact %></td>
          <td><%= institute.email %></td>
          <td><%= institute.phone %></td>
          <td><%= link_to 'Editar', edit_institute_path(institute.id) %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <p>No hay áreas.</p>
<% end -%>