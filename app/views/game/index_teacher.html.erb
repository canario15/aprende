<hr/>
<% unless @games_results.empty? -%>
  <p>
    <%= link_to new_trivia_path, class: 'btn-add-small' do %>
      <span class='icon-plus-sign'> Nueva Trivia</span>
    <% end -%>
  </p>
  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
        <th>Trivia</th>
        <th>Capacitaci√≥n</th>
        <th>Persona</th>
        <th>Cant. Preguntas</th>
        <th>Preguntas Correctas</th>
        <th>Puntaje</th>
        <th colspan=2 >Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @games_results.each do |game| -%>
        <tr>
          <td><%= game.trivia.title %></td>
          <td><%= game.trivia.course %></td>
          <td><%= game.try(&:user).try(&:first_name) %></td>
          <td><%= game.trivia.questions.count %></td>
          <td><%= game.correct_answers.count %></td>
          <td><%= game.score%></td>
          <td><%= link_to 'Ver Detalles', game_results_teacher_path(game) %></td>
          <td><%= link_to "PDF", game_results_teacher_path(game, format: :pdf), target: "_blank" %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <div class='section-title'>
    <p>No existen trivias realizadas</p><br>
    <p>
      <%= link_to new_trivia_path, class: 'btn-add' do %>
        <span class='icon-plus-sign'> Nueva Trivia</span>
      <% end -%>
    </p>
  </div>
<% end -%>
