<hr/>
<h2>Informacion del <span>profesor</span></h2>
<%= form_for @teacher, :html => {class: 'contact-form'} do |f| %>
  <div class="row-fluid offset2">
    <div class="span4">
      <%= f.text_field :first_name, autofocus: true,  placeholder: "Nombre" %>
      <%= f.text_field :last_name, placeholder: "Apellido" %>
      <%= f.text_field :phone, :autofocus => true, placeholder: 'Teléfono' %>
      <%= f.text_area :description, :autofocus => true, placeholder: 'Descripción' %>
    </div>
    <div class="span4">
      <%= render "cities/cities", f: f %>
      <%= f.collection_select :institute_ids, @institutes,:id,:name, { include_blank: true },{  multiple: true, class: 'chosen-select contact-form' } %>
    </div>
  </div>
  <div class="row-fluid margin">
    <div style="text-align:center">
      <p>
        <%= link_to "Cambiar contraseña",edit_teacher_registration_path %>
      </p>
      <%= link_to 'Cancelar', games_teacher_path,class:"btn btn-large" %>
      <button type="submit" class="btn btn-large">Confirmar</button>
    </div>
  </div>
<% end -%>