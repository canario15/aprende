<div class="page-header"></div>
<h1>Mis datos</h1>
<%= form_for @teacher, :html => {:class => "bs-example form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group">
      <label for="first_name" class="col-lg-2 control-label">Nombre</label>
      <div class="col-lg-10">
        <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="last_name" class="col-lg-2 control-label">Apellido</label>
      <div class="col-lg-10">
        <%= f.text_field :last_name, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="phone" class="col-lg-2 control-label">Teléfono</label>
      <div id="phone_teacher" class="col-lg-10">
         <%= f.text_field :phone, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-lg-2 control-label">Descripción</label>
      <div id="description_teacher" class="col-lg-10">
         <%= f.text_area :description, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to 'Cancelar', games_path %>
        <%= f.submit "Confirmar", class: 'btn btn-primary' %>
        <%= link_to "Cambiar contraseña", edit_teacher_registration_path %>
      </div>
    </div>
  </fieldset>
<% end -%>