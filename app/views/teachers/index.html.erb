<div class="page-header">
  <h1 id="tables">Listado de maestros</h1>
</div>
<% unless @teachers.empty? -%>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Mail</th>
        <th>Teléfono</th>
        <th>Descripción</th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| -%>
        <tr>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <td><%= teacher.phone %></td>
          <td><%= teacher.description %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <p>No existen maestros.</p>
<% end -%>