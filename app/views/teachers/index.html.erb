<div class="page-header">
  <h1 id="tables">Listado de maestros</h1>
</div>
<% if flash[:notice] -%>
  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-dismissable alert-success">
        <button class="close" data-dismiss="alert" type="button">×</button>
        <%= flash[:notice] %>
      </div>
    </div>
  </div>
<% end -%>
<% unless @teachers.empty? -%>
  <table id="teachers-table-admin" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Mail</th>
        <th>Teléfono</th>
        <th>Descripción</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| -%>
        <tr>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <td><%= teacher.phone %></td>
          <td><%= teacher.description %></td>
          <td>
           <%= link_to teacher_name_inactive(teacher), '', {id: "teacher_#{teacher.id}", class: "change-status", data: { id: teacher.id } } %>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <p>No existen maestros.</p>
<% end -%>