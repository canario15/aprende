<div class="page-header">
  <h1 id="tables">Listado de instructores</h1>
</div>
<%= link_to "Nuevo Instructor", new_teacher_path %>
<% unless @teachers.empty? -%>
  <table id="teachers-table-admin" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Mail</th>
        <th>Teléfono</th>
        <th>Descripción</th>
        <th>Ciudad</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| -%>
        <tr>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <td><%= teacher.phone %></td>
          <td><%= teacher.description %></td>
          <td><%= teacher.city %></td>
          <td>
           <%= link_to teacher_name_inactive(teacher), '', {id: "teacher_#{teacher.id}", class: "change-status", data: { id: teacher.id } } %>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <p>No existen maestros.</p>
<% end -%>