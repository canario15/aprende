<div class="col-lg-5">
  <div class="well">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :post }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'col-lg-2 control-label' %>
