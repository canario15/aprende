<div class="page-header">
  <h1>Nueva Notificación</h1>
</div>
<% if @notification.errors.any? -%>
  <div class="row">
    <div class="col-lg-offset-2">
      <div class="alert alert-dismissable alert-danger">
        <h4>Se encontro <%= pluralize(@notification.errors.count, "error") %> no es posible crear la Notificación</h4>
        <% @notification.errors.full_messages.each do |msg| %>
          <%= content_tag :label, msg %>
        <% end -%>
      </div>
    </div>
  </div>
<% end -%>
<%= form_for @notification, :html => {:class => "bs-example form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group">
      <label for="title" class="col-lg-2 control-label">Título</label>
      <div class="col-lg-10">
        <%= f.text_field :title, :autofocus => true, class: 'form-control', placeholder: 'Nueva notificación' %>
      </div>
    </div>
    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Descripción</label>
      <div class="col-lg-10">
        <%= f.text_area :description, :autofocus => true, class: 'form-control', placeholder: 'Descripción' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to 'Cancelar', notifications_path %>
        <%= f.submit "Guardar", class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end -%>
