<div class="page-header">
  <h1 id="tables">Notificaciones</h1>
</div>
<%= (link_to 'Nueva Notificacion', new_notification_path) %>
<% unless @notifications.empty? -%>
  <table id="notifications_table" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Título</th>
        <th>Descripción</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @notifications.each do |notification| -%>
        <tr>
          <td><%= notification.title %></td>
          <td><%= notification.description %></td>
          <td>
            <%= link_to 'Eliminar', '', {id: "notification_#{notification.id}", class: "delete", data: { id: notification.id } } %>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <p>No existen notificaciones</p>
<% end -%>