<% if current_user -%>
  <!-- Switch Section -->
  <div class="switch-section">
    <p class="switch-section-cont">
      <%= render partial: 'layouts/menu_options_user'%>
    </p>
  </div>
<% end -%>
<% if current_teacher -%>
  <!-- Switch Section -->
  <div class="switch-section">
    <p class="switch-section-cont">
      <%= render partial: 'layouts/menu_options_teacher'%>
    </p>
  </div>
<% end -%>
<% if current_admin -%>
  <!-- Switch Section -->
  <div class="switch-section">
    <p class="switch-section-cont">
      <%= render partial: 'layouts/menu_options_admin'%>
    </p>
  </div>
<% end -%>

<!-- Section signout -->
<% if current_admin -%>
    <%= link_to_if(current_admin.teacher, content_tag(:span, nil,class: "icon-exchange"), switch_admin_path, class: "section-switch") %>
    <%= link_to( content_tag(:span, nil,class: "icon-signout"), destroy_admin_session_path, method: :delete,class: "section-logout") %>
    <%= link_to( content_tag(:span, nil,class: "icon-user"), edit_admin_path(current_admin.id), class: "section-profile") %>
<% end -%>
<% if current_teacher -%>
    <%= link_to_if(current_teacher.admin, content_tag(:span, nil,class: "icon-exchange"), switch_teacher_path, class: "section-switch") %>
    <%= link_to( content_tag(:span, nil,class: "icon-signout"), destroy_teacher_session_path, method: :delete,class: "section-logout") %>
    <%= link_to( content_tag(:span, nil,class: "icon-user"), edit_teacher_path(current_teacher.id), class: "section-profile") %>
<% end -%>
<% if current_user -%>
    <%= link_to( content_tag(:span, content_tag(:span, 'Salir', class: 'panel-title hide'),class: "icon-signout"), destroy_user_session_path, method: :delete,class: "section-logout section-link-right") %>
    <%= link_to( content_tag(:span, content_tag(:span, 'Mis Datos', class: 'panel-title hide'),class: "icon-user"), edit_user_path(current_user.id), class: "section-profile section-link-right") %>
    <% if current_page?(home_path) -%>
      <%= link_to "#" , class: "section-search section-link-right",id: "search-btn" do %>
        <%= content_tag :span, content_tag(:span, 'Buscar', class: 'panel-title hide'), class: "icon-search",id: "search-span" %>
      <% end %>
      <%= content_tag :div,(text_field_tag 'search',nil,id: "search-input") , class: "contact-form section-search hidden",id: "search-div" %>
    <% end -%>
<% end -%>
