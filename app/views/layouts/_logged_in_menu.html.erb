<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a href="/home" class="navbar-brand">Aprende</a>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <% if current_user -%>
        <%= render partial: 'layouts/menu_options_user'%>
      <% end -%>
      <% if current_teacher -%>
        <%= render partial: 'layouts/menu_options_teacher'%>
      <% end -%>
      <% if current_admin -%>
        <%= render partial: 'layouts/menu_options_admin'%>
      <% end -%>
      <form class="navbar-form navbar-left">
        <input type="text" class="form-control col-lg-8" placeholder="Search">
      </form>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
        <% if current_user %>
          <%= link_to(edit_user_path(current_user), class: 'dropdown-toggle', 'data-toggle' => 'dropdown') do %>
            <%= current_user.email %><b class="caret"></b>
          <% end %>
        <% end %>
        <% if current_teacher %>
          <%= link_to(edit_teacher_path(current_teacher), class: 'dropdown-toggle', 'data-toggle' => 'dropdown') do %>
            <%= current_teacher.email %><b class="caret"></b>
          <% end %>
        <% end %>
          <% if current_admin %>
          <%= link_to(edit_admin_path(current_admin), class: 'dropdown-toggle', 'data-toggle' => 'dropdown') do %>
            <%= current_admin.email %><b class="caret"></b>
          <% end %>
        <% end %>
        <ul class="dropdown-menu">
          <li><a href="#">Ver cuenta</a></li>
          <li><a href="#">Preferencias</a></li>
          <li class="divider"></li>
          <% if current_user %>
            <li><%= link_to('Salir', destroy_user_session_path, :method => :delete) %></li>
          <%end%>
          <% if current_teacher %>
            <li><%= link_to('Salir', destroy_teacher_session_path, :method => :delete) %></li>
          <%end%>
           <% if current_admin %>
            <li><%= link_to('Salir', destroy_admin_session_path, :method => :delete) %></li>
          <%end%>
        </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
