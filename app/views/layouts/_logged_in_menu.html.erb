<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a href="/home" class="navbar-brand">Aprende</a>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <% if current_user -%>
        <%= render partial: 'layouts/menu_options_user'%>
      <% end -%>
      <% if current_teacher -%>
        <%= render partial: 'layouts/menu_options_teacher'%>
      <% end -%>
      <% if current_admin -%>
        <%= render partial: 'layouts/menu_options_admin'%>
      <% end -%>
      <% if current_user -%>
        <div class="nav navbar-left col-lg-3">
          <%= form_for :search,url: home_path, method: "get", html: {class: "navbar-form"} do |f|%>
            <div class="input-group" >
              <%= f.text_field :q, value: @q_value, class: "form-control", placeholder: "Buscar" %>
              <span class="input-group-btn" >
                <%= f.submit "Buscar", class: "btn btn-secondary" %>
              </span>
            </div>
          <% end -%>
        </div>
      <% else -%>
        <div class="nav navbar-left col-lg-3">
          <form class="navbar-form">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Buscar">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Buscar</button>
              </span>
            </div>
          </form>
        </div>
      <% end -%>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
        <% if current_user %>
          <%= link_to(edit_user_path(current_user), class: 'dropdown-toggle', 'data-toggle' => 'dropdown') do %>
            <%= current_user.email %><b class="caret"></b>
          <% end %>
        <% end %>
        <% if current_teacher %>
          <%= link_to(edit_teacher_path(current_teacher), class: 'dropdown-toggle', 'data-toggle' => 'dropdown') do %>
            <%= current_teacher.email %><b class="caret"></b>
          <% end %>
        <% end %>
          <% if current_admin %>
          <%= link_to(edit_admin_path(current_admin), class: 'dropdown-toggle', 'data-toggle' => 'dropdown') do %>
            <%= current_admin.email %><b class="caret"></b>
          <% end %>
        <% end %>
        <ul class="dropdown-menu">
          <li><a href="#">Ver cuenta</a></li>
          <li class="divider"></li>
          <% if current_user %>
            <li><%= link_to 'Edite sus datos', edit_user_path(current_user.id) %></li>
            <li><%= link_to('Salir', destroy_user_session_path, :method => :delete) %></li>
          <%end%>
          <% if current_teacher %>
            <li><%= link_to 'Edite sus datos', edit_teacher_path(current_teacher.id) %></li>
            <li><%= link_to('Salir', destroy_teacher_session_path, :method => :delete) %></li>
          <%end%>
           <% if current_admin %>
            <li><%= link_to('Salir', destroy_admin_session_path, :method => :delete) %></li>
          <%end%>
        </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
