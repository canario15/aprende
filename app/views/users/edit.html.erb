<div class="page-header"></div>
<h1>Mis datos</h1>
<%= form_for @user, :html => {:class => "bs-example form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group">
      <label for="first_name" class="col-lg-2 control-label">Nombre</label>
      <div class="col-lg-10">
        <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="last_name" class="col-lg-2 control-label">Apellido</label>
      <div class="col-lg-10">
        <%= f.text_field :last_name, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Cursando</label>
      <div class="col-lg-10">
        <%= f.collection_select(:level_id, all_levels, :id, :title, {}, {:class=> "form-control"}) %>
      </div>
    </div>
    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Instituto</label>
      <div class="col-lg-10">
        <%= f.collection_select(:institute_id, all_institutes, :id, :name, {:include_blank => true}, {:class=> "form-control"}) %>
      </div>
    </div>
    <%= render "cities/cities", f: f %>
    <div class="form-group">
      <label for="avatar" class="col-lg-2 control-label">Avatar</label>
      <div class="col-lg-10">
        <output id="avatar_preview">
          <span>
          <%= image_tag @user.avatar.url(:large),class: "img-thumbnail" %>
          </span>
        </output>
         <span class="btn btn-default btn-file">
          Cargar Avatar<%= f.file_field :avatar,id: "avatar_field" %>
        </span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to 'Cancelar', home_path %>
        <%= f.submit "Confirmar", class: 'btn btn-primary' %>
        <%= link_to "Cambiar contraseÃ±a", edit_user_registration_path  unless @user.provider %>
      </div>
    </div>
  </fieldset>
<% end -%>