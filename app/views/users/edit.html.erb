<hr/>
<h2>Informacion del <span>alumno</span></h2>
<%= form_for(@user, :html => { class: 'contact-form' } ) do |f| %>
<div class="row-fluid offset2">
  <div class="span4">
    <%= f.text_field :first_name, autofocus: true,  placeholder: "Nombre" %>
    <%= f.text_field :last_name, placeholder: "Apellido" %>
    <%= f.collection_select(:level_id, all_levels, :id, :title, {}) %>
    <%= f.collection_select(:institute_id, all_institutes, :id, :name, {prompt: "Instituto"}) %>
    <%= render "cities/cities", f: f %>
  </div>
  <div class="span4">
    <output id="avatar_preview" >
      <span>
        <% if @user.avatar.present? -%>
        <%= image_tag @user.avatar.url %>
        <% else -%>
        <%= image_tag 'default_user.png', class: "default" %>
        <% end -%>
      </span>
    </output>
    <%= f.file_field :avatar, accept: "image/*", class: "hidden",id: "avatar_field"  %>
  </div>
</div>
<div class="row-fluid margin">
  <div style="text-align:center">
    <p><%= link_to "Cambiar contraseÃ±a", edit_user_registration_path unless @user.provider %></p>
    <%= link_to 'Cancelar', home_path,class:"btn btn-large" %>
    <button type="submit" class="btn btn-large">Confirmar</button>
  </div>
</div>
<% end %>