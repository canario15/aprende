<div class="page-header">
  <h1 id="tables">Listado de personas</h1>
</div>
<p>
  <%= link_to new_user_path, class: 'btn-add-small' do %>
    <span class='icon-plus-sign'> Nueva Persona</span>
  <% end -%>
</p>
<% unless @users.empty? -%>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Mail</th>
        <th>√Årea</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| -%>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.institute %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% else -%>
  <p>No existen personas.</p>
<% end -%>
